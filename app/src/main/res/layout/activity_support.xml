<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    android:background="@color/white"
    tools:context=".ui.ui.profile.SupportActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRAKRUTHI"
                android:textColor="@color/projectblue"
                android:textSize="30dp"
                android:background="@color/white"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/_10sdp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ivcontacticon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/contact" />

<!--            android:text=""-->
<!--            android:textColor="@color/ProjectBlack"-->

            <TextView
                android:id="@+id/tvcall1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/ivcontacticon"
                android:background="@color/white"
                android:padding="5dp"
                android:text="040-40138904"
                android:textAlignment="center"

                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/toolbar_color"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tvcall2"
                android:layout_below="@+id/tvcall1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/ivcontacticon"
                android:background="@color/white"
                android:padding="5dp"
                android:text="+91 - 93907 80314"
                android:textAlignment="center"

                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/toolbar_color"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:paddingTop="05dp"
                />




        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:padding="10dp">

        <ImageView
            android:id="@+id/ivmailicon"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:layout_centerVertical="true"
            android:src="@drawable/email_icon" />

        <TextView
            android:id="@+id/tvemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/ivmailicon"
            android:padding="5dp"
            android:background="@color/white"

            android:text="info@prakruthiepl.com"
            android:textAlignment="center"
            android:textColor="@color/toolbar_color"
            android:textSize="12dp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ivlinkicon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/white"
                android:layout_centerVertical="true"
                android:src="@drawable/link" />

            <TextView
                android:id="@+id/tvlink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/ivlinkicon"
                android:padding="5dp"
                android:text="7-1-617/A, Imperial Towers, 301, 3rd Floor,\nAmeerpet, Hyderabad, Telangana,\nIndia - 500038.#1-6-69/1/26/A/1, Paramount Apartment, 2nd Floor, DK Road, Balkampet, Ameerpet, Hyderabad - 500018"
                android:background="@color/white"
                android:textAlignment="center"
                android:textColor="@color/toolbar_color"
                android:textSize="12dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/profile_Support_id_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/ll_site_visit_req_Profile_Support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_dashboard_black_24dp" />

            <TextView
                android:id="@+id/tv_support_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/toolbar_color"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_PS_site_visit_req_LastUpdated3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/_20sdp"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_gravity="center"
                android:src="@drawable/contact" />
            <!--            user_Name_or_MobileNumber-->
            <TextView
                android:id="@+id/tv_support_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/toolbar_color"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_PS_site_visit_req_LastUpdated2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/_20sdp"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_gravity="center"
                android:src="@drawable/email_icon" />

            <TextView
                android:id="@+id/tv_support_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_site_visit_req_LastUpdated4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/_20sdp"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_gravity="center"
                android:src="@drawable/logout" />

            <TextView
                android:id="@+id/tv_support_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>